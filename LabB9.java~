public class LabB9
{ 
         public static void main(String[] args) 
         {          
		 int s0 = 0; 
	         int t0 = (new Scanner(System.in).nextInt()); 
	         for (int t5 = 0; t5 < t0; t5++) 
	         {         
	             s0 = s0 + t5; 
	         }         
	         System.out.print(s0);         
	 }
}
